<% content_for :title, "Welcome to Recipe Cookbook" %>

<div class="hero-section bg-light p-5 rounded-3 mb-4">
  <div class="container-fluid py-5">
    <% if user_signed_in? %>
      <h1 class="display-4 fw-bold">Welcome Chef, <%= current_user.display_name %>!</h1>
      <p class="col-md-8 fs-4 lead">Ready to cook something amazing? Browse your recipes or discover new culinary adventures.</p>
    <% else %>
      <h1 class="display-4 fw-bold">Welcome to Recipe Cookbook</h1>
      <p class="col-md-8 fs-4 lead">Discover, create, and share your favorite recipes with our modern recipe management platform. Built with Ruby on Rails for food enthusiasts.</p>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to "Browse Recipes", recipes_path, class: "btn btn-success btn-lg me-3" %>
      <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-outline-primary btn-lg" %>
    <% else %>
      <%= link_to "Get Started", new_user_registration_path, class: "btn btn-success btn-lg me-3" %>
      <%= link_to "Browse Recipes", recipes_path, class: "btn btn-outline-primary btn-lg" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">
          <i class="bi bi-journal-bookmark text-primary"></i> Create Recipes
        </h5>
        <p class="card-text">Add your favorite recipes with detailed instructions, ingredients, and cooking tips.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">
          <i class="bi bi-search text-success"></i> Discover
        </h5>
        <p class="card-text">Browse through a collection of delicious recipes shared by our community of food lovers.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">
          <i class="bi bi-heart text-danger"></i> Save Favorites
        </h5>
        <p class="card-text">Keep track of your favorite recipes and build your personal collection of go-to dishes.</p>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div class="mt-5">
    <h3>Your Recipe Activity</h3>
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body text-center">
            <h4 class="card-title">
              <i class="bi bi-book text-primary"></i>
              <%= current_user.recipes.count %>
            </h4>
            <p class="card-text">Your Recipes</p>
            <%= link_to "View All", recipes_path(user: current_user.id), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body text-center">
            <h4 class="card-title">
              <i class="bi bi-plus-circle text-success"></i>
              Quick Add
            </h4>
            <p class="card-text">Add New Recipe</p>
            <%= link_to "Create Recipe", new_recipe_path, class: "btn btn-success btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
