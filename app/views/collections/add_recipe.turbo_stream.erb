<%= turbo_stream.replace "collections-dropdown-#{@recipe.id}" do %>
  <%= render partial: 'shared/collections_dropdown', locals: { recipe: @recipe } %>
<% end %>

<%= turbo_stream.prepend "notifications" do %>
  <div class="alert alert-<%= @success ? 'success' : 'warning' %> alert-dismissible show" 
       role="alert" 
       data-controller="auto-dismiss"
       style="background-color: <%= @success ? '#2d7d32' : '#ef6c00' %> !important; border-color: <%= @success ? '#48bb78' : '#ed8936' %> !important; color: <%= @success ? '#c6f6d5' : '#feebc8' %> !important; opacity: 1 !important;">
    <i class="bi bi-<%= @success ? 'check-circle' : 'exclamation-triangle' %>"></i>
    <%= @message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>
